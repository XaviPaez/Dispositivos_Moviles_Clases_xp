<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_si"
    android:orientation="vertical"
    tools:context=".ui.activities.MainActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="183dp"
        android:layout_height="168dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:scaleY="0.75"
        android:src="@drawable/dona" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="left|center_vertical"
        android:text="LOS SIMPSONS"
        android:fontFamily="@font/akbar"
        android:textColor="@color/yellow"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/label_saludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/akbar"
        android:text="Bienvenidos a Simpsomania"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/label_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/akbar"
        android:text="Correo:"
        android:textColor="#FFC107" />

    <EditText
        android:id="@+id/text_email"
        android:layout_width="289dp"
        android:layout_height="49dp"
        android:layout_marginStart="54dp"
        android:ems="10"
        android:fontFamily="@font/akbar"
        android:inputType="textEmailAddress"
        android:textColorHint="#FFFFFF" />

    <TextView
        android:id="@+id/label_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/akbar"
        android:layout_marginStart="54dp"
        android:text="Contraseña:"
        android:textColor="#FFC107"
        android:translationX="-4dp" />

    <EditText
        android:id="@+id/text_password"
        android:layout_width="289dp"
        android:layout_height="49dp"
        android:layout_marginStart="54dp"
        android:fontFamily="@font/akbar"
        android:ems="10"
        android:inputType="textPassword"
        android:textColorHint="#7AFF9800" />

    <Button
        android:id="@+id/btn_ingresar"
        android:layout_width="289dp"
        android:layout_height="49dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/akbar"
        android:layout_marginTop="10dp"
        android:backgroundTint="#A6FFC107"
        android:text="Ingresar"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="25px" />

    <TextView
        android:id="@+id/label_opciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/akbar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="O conéctese usando las redes sociales"
        android:textColor="#FFFFFF" />

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnTwitter"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:backgroundTint="#1DA1F2"
        android:fontFamily="@font/akbar"
        android:gravity="center"
        android:text="Twitter"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        app:cornerRadius="25px"
        app:layout_constraintEnd_toStartOf="@+id/btnResult"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnResult"
        android:layout_width="155dp"
        android:layout_height="48dp"

        android:layout_marginEnd="24dp"
        android:backgroundTint="#1877F2"
        android:fontFamily="@font/akbar"
        android:gravity="center"
        android:text="Facebook"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="25px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHuella"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="52dp"
        android:backgroundTint="#FFC107"
        android:fontFamily="@font/akbar"
        android:text="Ingresar con Huella"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></Button>

    <TextView
        android:id="@+id/registro"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/akbar"
        android:textSize="20dp"
        android:text="Regístrese"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnHuella"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.685" />
</androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>