<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo_camarah"
    android:layout_height="match_parent"
    tools:context=".ui.activities.CameraActivity">

    <ImageView
        android:id="@+id/imgCapture"
        android:layout_width="274dp"
        android:layout_height="372dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btn_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toma una foto!"
        android:fontFamily="@font/akbar"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/yellow1"
        android:drawableLeft="@drawable/icono_camara50"
        android:drawablePadding="8dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/imgCapture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>